---
interface Props {
	title: string;
	body: string;
}

const { title, body } = Astro.props;
---

<div class="card">
		<h2>
			{title}
		</h2>
		<p>
			{body}
		</p>
</div>
<style>
	.card {
		width: 20rem;
		background-color: var(--blue-3);
		color: var(--white);
		border-radius: 5px;
		padding: 1rem 0.5rem;
	}
</style>
