---
import Layout  from "@layouts/Layout.astro";
import Hero from "@sections/hero.astro";
import Highlights from "@components/Highlights/Highlights.astro";
import { t } from "i18n:astro";
import { getLocale } from "i18n:astro";

const funfacts = [
	{
	img: "./images/logo.png",
	funfact: "240 +",
	title: "PROJECT COMPLETE",
	},
	{
	img: "./images/logo.png",
	funfact: "240 +",
	title: "HAPPY CLIENTS",
	},
	{
	img: "./images/logo.png",
	funfact: "240 +",
	title: "WORKING PROJECTS",
	},
]

const locale = getLocale()
---

<Layout title="RemodelingFc">
	<main>
		<Hero /> 

		<section class="introduction__container">
			<article class="introduction__text">
				<h3>{t('introduction__text')}</h3>
			</article>

			<article class="introduction__title">
				<h1>{t('introduction__title')}</h1>
			</article>
		</section>

		<div>
			<h3>Comprehensive Home Improvement Services</h3>
			<p>REMODELING FC LLC offers a comprehensive range of services designed to enhance both the aesthetic and functional aspects of your home. With over 10 years of experience, their laminated flooring services include personalized consultations</p>

			<div>
				<ol>
					<li>Floor Services</li>
					<li>Painting Services</li>
				</ol>
			</div>

			<div class="funfacts__container">
				{funfacts.map((funfact) => (
					<div class="funfact">
						<img src={funfact.img} alt="funfact"/>
						<h3>{funfact.title}</h3>
						<p>{funfact.funfact}</p>
					</div>
				))}
			</div>
		</div>

		<div class="why__section">
			<div class="why__container">
				<h2>Why Choose Us?</h2>
				<p>
					At REMODELING FC LLC, we pride ourselves on delivering exceptional home improvement services that combine quality craftsmanship, superior materials, and a customer-centric approach.
				</p>
				
				<h3>Our Core Benefits</h3>
				<ol>
					<li>Over 10 Years of Experience</li>
					<li>High-Quality Materials</li>
					<li>Skilled Craftsmanship</li>
					<li>Comprehensive Services</li>
					<li>Personalized Approach</li>
					<li>Efficient Project Management</li>
				</ol>
			</div>
		</div>
		<!--TODO: Testimonials -->
	</main>
</Layout>

<style>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		padding: 1.5rem;
		border-radius: 8px;
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions strong {
		color: rgb(var(--accent-light));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
</style>
