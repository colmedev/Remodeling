---
import { t } from "i18next";
interface Props {
  address?: string;
  email?: string;
  phone?: string;
  schedule?: string;
}

const { schedule, phone, email, address } = Astro.props;

const dataFooter = t('footer', {
  returnObjects: true
})

const { contact } = dataFooter[0]
---

<div class="footer-list">
  <div>
    <h2>{contact}</h2>
    <p>{address}</p>
    <p>{email}</p>
    <a href={`tel:${phone}`}>{phone}</a>
  </div>

  <div>
    <p>{schedule}</p>
  </div>

</div>

<style>
  .footer-list {
    list-style: none;

    &  a {
      color: #000;
      text-decoration: none;

      &:hover {
        color: var(--black);
      }
    }
  }
</style>