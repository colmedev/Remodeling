---
import { NavItems } from "./data";
---


<header class="navbar__container">
  <img src="/images/logo.png"/>

  <nav class="navbar">
    <ul class="navbar__list" aria-hidden="true">
      {
        NavItems
        .map(({text, url, label}) => (
          <li class="navbar__item">
            <a
            href={url}
            aria-label={label}
            >
              {text}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>

<style>
.navbar__container {
  display: flex;
  justify-content: space-between;
  padding-inline-end: 1rem;
  align-items: center;

  & .navbar__list {
    display: flex;
    gap: 1rem;

    & .navbar__item {
      list-style: none;

      & a {
        text-decoration: none;
        color: var(--orange);
      }
    }

    & .custom-underline::after {
      content: "";
      display: block;
      width: 100%;
      height: 2px;
      background: #001260;
      transform: scaleX(0);
      transition: transform 0.3s ease-in-out;
    }

    & .custom-underline:hover::after {
      transform: scaleX(1);
    }
  }
}



</style>